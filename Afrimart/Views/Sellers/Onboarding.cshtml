                                        <input class="form-control" type="text" asp-for="City">
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>

                                    <div class="col-sm-6">
                                        <label class="form-label">ZIP Code</label>
                                        <input class="form-control" type="text" asp-for="Zip">
                                        <span asp-validation-for="Zip" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="form-label">EIN</label>
                                        <input class="form-control" type="text" asp-for="EIN">
                                        <span asp-validation-for="EIN" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <hr class="mt-2 mb-4">
