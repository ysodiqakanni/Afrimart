                                        <tr>
                                            <td class="py-3 align-middle">
                                                <div class="d-flex align-items-center">
                                                    <img src="/assets/img/card-visa.png" width="39" alt="Visa">
                                                    <div class="ps-2"><span class="fw-medium text-heading me-1">Visa</span>ending in 9791</div>
                                                </div>
                                            </td>
