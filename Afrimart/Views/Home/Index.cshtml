    function showQuickView(e) {
        const psin = $(e).data("psin"); 
        $('#quick-view').modal('show'); 

        var title = $(e.relatedTarget).data('name');
        var desc = $(e.relatedTarget).data('desc');

        $(e.currentTarget).find('a[name="prod-title"]').text(title);
        $(e.currentTarget).find('div[name="prod-desc"]').text(desc);

        $.ajax({
            url: '@Url.Action("GetQuickViewPartialView", "Home")',
            type: 'GET',
            data: { psin: psin},
            success: function (result) {
                $("#quickview-partial").html(result);

                $(".product-gallery-thumblist-item").on("click",
                    function(e) { 
                        const id = $(e.currentTarget).data("id");
                        // remove the active image
                        $($.find("div.product-gallery-preview-item.active")).removeClass("active");
                        $($.find("div.product-gallery-preview-item#" + id)).addClass("active");

                        $($.find("a.product-gallery-thumblist-item.active")).removeClass("active");
                        $(e.currentTarget).addClass("active");
                        //$($.find("a.product-gallery-preview-item#" + id)).addClass("active");
                    });
            },
            beforeSend: function() {
                $("body").addClass("loading");
            },
            complete: function() {
                $("body").removeClass("loading");
            }
        }); 
    }

 
</script>