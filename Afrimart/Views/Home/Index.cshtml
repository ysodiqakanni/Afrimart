<!-- Products grid (Trending products)-->
<section class="container pt-md-3 pb-5 mb-md-3">
    <h2 class="h3 text-center">Trending products</h2>
    <div class="row pt-4 mx-n2">
        @foreach (var product in Model.TrendingProducts)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 px-2 mb-4">
                <div class="card product-card">
                    <button class="btn-wishlist btn-sm" type="button" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to wishlist"><i class="ci-heart"></i></button>
                    <a class="card-img-top d-block overflow-hidden" href="@Url.Action("DisplayProduct", "Products", new {psin=product.ProductPSIN, name=product.UrlFriendlyProductName})"><img src="@product.ImageUrl" alt="Product"></a>
                    <div class="card-body py-2">
                        <a class="product-meta d-block fs-xs pb-1" href="#">@product.CategoryName</a>
                        <h3 class="product-title fs-sm"><a href="shop-single-v1.html">@product.ProductName</a></h3>
                        <div class="d-flex justify-content-between">
                            @if (product.UnitsAvailable > 0)
                            {
                                <div class="product-price"><span class="text-accent">$@Math.Truncate(product.SellingPrice).<small>@((int) ((product.SellingPrice - Math.Truncate(product.SellingPrice)) * 100))</small></span></div>
                            }
                            else
                            {
                                <div class="product-price"><span class="text-muted fs-sm">Out of stock</span></div>
                            }
                            <div class="star-rating">
                                <i class="star-rating-icon ci-star-filled active">

                                </i>
                                <i class="star-rating-icon ci-star-filled active">

                                </i>
                                <i class="star-rating-icon ci-star-filled active">

                                </i>
                                <i class="star-rating-icon ci-star-half active">

                                </i><i class="star-rating-icon ci-star"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-body card-body-hidden">
                        @if (product.UnitsAvailable > 0)
                        {
                            <button class="btn btn-primary btn-sm d-block w-100 mb-2" type="button" onclick="window.location.href = '@Url.Action("AddToCart","ShoppingCart", new {psin=@product.ProductPSIN, quantity=1})'"><i class="ci-cart fs-sm me-1"></i>Add to Cart</button>
                        }
                        else
                        {
                            <a class="btn btn-secondary btn-sm d-block w-100 mb-2" href="@Url.Action("DisplayProduct", "Products", new {psin=product.ProductPSIN, name=product.UrlFriendlyProductName})">View details</a>
                        }
                        <div class="text-center">

                            <a class="nav-link-style fs-ms" href="#quick-view" onclick="showQuickView(this)"
                               data-name="@product.ProductName" data-rev-count="@product.Rating" data-price="@product.Price" data-desc="@product.Description" 
                               data-avail="@(product.UnitsAvailable > 0)" data-psin="@product.ProductPSIN"><i class="ci-eye align-middle me-1"></i>Quick view</a>
                        </div>
                    </div>
                </div>
                <hr class="d-sm-none">
            </div>
        }
    </div>
    <div class="text-center pt-3"><a class="btn btn-outline-accent" href="shop-grid-ls.html">More products<i class="ci-arrow-right ms-1"></i></a></div>
